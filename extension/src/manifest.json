{
  "manifest_version": 2,
  "name": "Auto Tab Groups",
  "author": "Nitzan Papini",
  "version": "1.1.5",
  "description": "Automatically groups tabs by domain.",
  "permissions": ["tabs", "storage", "tabGroups"],
  "sidebar_action": {
    "default_panel": "public/sidebar.html",
    "default_title": "Auto Tab Groups",
    "default_icon": {
      "16": "assets/icon.svg",
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    }
  },
  "browser_action": {
    "default_popup": "public/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "139.0"
    }
  },
  "icons": {
    "16": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false,
    "type": "module"
  }
}
